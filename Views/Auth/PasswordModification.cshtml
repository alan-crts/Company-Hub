@model PasswordModification

@{
    ViewBag.Title = "Changement de mot de passe";
    Layout = "_Layout";
}

@section scripts{
    <partial name="_ValidationScriptsPartial"/>
}

<h2>Changement de mot de passe</h2>
<div class="w-50 container">
    <form method="post">
        <div class="form-group mb-3">
            <label class="form-label" for="OldPassword">Mot de passe actuel</label>
            <input class="form-control" asp-for="OldPassword"/>
            <span class="text-danger" asp-validation-for="OldPassword"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="NewPassword">Nouveau mot de passe</label>
            <input class="form-control" asp-for="NewPassword"/>
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label" for="ConfirmPassword">Confirmation du nouveau mot de passe</label>
            <input class="form-control" asp-for="ConfirmPassword"/>
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <button type="submit" class="btn btn-primary">Changer</button>
    </form>
</div>